// Approximate pi with monte-carlo simulation
println = {std.print(@[0])std.print("\n")}

n_iter = 10000000

x;y;val;res;count=0;hits=0
std.repeat({
    x = std.random() * 2 - 1
    y = std.random() * 2 - 1

    hits = hits + std.if(x*x + y*y <= 1, 1, 0)

    count = count + 1
	count < n_iter
})

std.print("In ")
std.print(n_iter)
std.print(" steps, pi was approximated to be ")
println(4 * hits / n_iter)
